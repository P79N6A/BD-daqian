{
    "printWidth": 120,
    "tabWidth": 4,
    "parser": "babylon",
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "eslintIntegration": true,
    "stylelintIntegration": true,
    "semi": true,
    "singleQuote": false,
    "overrides": [
        {
            "files": [
                "*.json",
                ".eslintrc",
                ".tslintrc",
                ".prettierrc",
                ".tern-project"
            ],
            "options": {
                "parser": "json",
                "tabWidth": 2
            }
        },
        {
            "files": "*.{css,sass,scss,less}",
            "options": {
                "parser": "postcss",
                "tabWidth": 4
            }
        },
        {
            "files": "*.{vue}",
            "options": {
                "parser": "vue",
                "tabWidth": 4
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}